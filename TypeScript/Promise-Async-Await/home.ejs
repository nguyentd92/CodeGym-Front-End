    <script>
        let add = (a, b) => {
            return new Promise((resolve, reject) => {
                setTimeout(() => {
                    if (typeof a != 'number' || typeof b != 'number') {
                        return reject(new Error('Tham so phai la number'))
                    }
                    resolve(a + b);
                }, 500);
            });
        };

        let a = add(4,5);
        console.log(a);
        setTimeout(() => console.log(a));
    </script>
